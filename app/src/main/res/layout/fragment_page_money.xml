<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragmentsAll.page_money">



    <ImageView
        android:layout_marginBottom="500dp"
        android:src="@drawable/img_page_money_main"
        android:layout_width="match_parent"
        android:layout_height="300dp"
       />
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:elevation="36dp"
        app:cardBackgroundColor="@color/blue_little_light"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="150dp"
        android:background="@color/blue_little_light"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_gravity="top|end"
            android:layout_width="200dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="32dp"

            android:layout_height="50dp">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/shape_circle_green"
                android:padding="4dp"
                android:src="@drawable/ic_arrow_up"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <TextView
                android:textColor="@color/black"
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:text="دریافتی ها"
                app:layout_constraintEnd_toStartOf="@+id/imageView"
                app:layout_constraintTop_toTopOf="parent" />
            <TextView
                android:id="@+id/txt_page_money_all_income"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintEnd_toStartOf="@+id/imageView"
                app:layout_constraintTop_toBottomOf="@+id/textView" />
            <TextView
                android:textColor="@color/gray_dark"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ریال"
                app:layout_constraintEnd_toStartOf="@+id/txt_page_money_all_income"
                app:layout_constraintTop_toBottomOf="@+id/textView" />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_gravity="top|start"
            android:layout_width="200dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="32dp"
            android:layout_height="50dp">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/shape_circle_red"
                android:padding="4dp"
                android:src="@drawable/ic_arrow_down"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <TextView
                android:textColor="@color/black"
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:text="پرداختی ها"
                app:layout_constraintEnd_toStartOf="@+id/imageView2"
                app:layout_constraintTop_toTopOf="parent" />
            <TextView
                android:id="@+id/txt_page_money_all_cost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintEnd_toStartOf="@+id/imageView2"
                app:layout_constraintTop_toBottomOf="@+id/textView2" />
            <TextView
                android:textColor="@color/gray_dark"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ریال"
                app:layout_constraintEnd_toStartOf="@+id/txt_page_money_all_cost"
                app:layout_constraintTop_toBottomOf="@+id/textView2" />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_gravity="center_vertical|bottom"
            android:layout_width="200dp"
            android:layout_marginBottom="16dp"
            android:layout_marginStart="100dp"
            android:layout_height="50dp">

            <ImageView
                android:id="@+id/imageview6"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/shape_circle_yellow"
                android:padding="4dp"
                android:src="@drawable/ic_money_rest"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <TextView
                android:textColor="@color/black"
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:text="مانده"
                app:layout_constraintEnd_toStartOf="@+id/imageview6"
                app:layout_constraintTop_toTopOf="parent" />
            <TextView
                android:id="@+id/txt_page_money_all_rest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintEnd_toStartOf="@+id/imageview6"
                app:layout_constraintTop_toBottomOf="@+id/textView6" />
            <TextView
                android:textColor="@color/gray_dark"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ریال"
                app:layout_constraintEnd_toStartOf="@+id/txt_page_money_all_rest"
                app:layout_constraintTop_toBottomOf="@+id/textView6" />
        </androidx.constraintlayout.widget.ConstraintLayout>



    </com.google.android.material.card.MaterialCardView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_money"
        android:layout_marginTop="400dp"
        tools:listitem="@layout/item_add_new_money"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <ImageView
        android:background="@drawable/shape_for_button"
        android:src="@drawable/ic_add"
        android:id="@+id/btn_add_new_money"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="bottom"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="32dp"
        app:tint="@color/white" />

</FrameLayout>